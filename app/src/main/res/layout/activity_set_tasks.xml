<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:text="@string/set_tasks_title"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/setTasksListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"/>

    <!-- FIX 1: Set explicit height to 48dp to resolve the 'Touch target size too small' error -->
    <EditText
        android:id="@+id/editNewTask"
        android:hint="@string/set_tasks_hint_new"
        android:inputType="textCapSentences"
        android:autofillHints="username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"/> <!-- Added margin to separate from ListView -->

    <Button
        android:id="@+id/btnAddTask"
        android:text="@string/add_more"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>